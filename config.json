{
  "input_directory": "./music",
  "display": {
    "resolution": "auto",
    "fullscreen": false
  },
  "visualization": {
    "trace_color": [0.2, 1.0, 0.3],
    "trace_width": 2.5,
    "persistence_time": 0.01,
    "decay_rate": 15.0,
    "glow_radius": 3.0,
    "glow_intensity": 1.0,
    "background_color": [0.0, 0.1, 0.0],
    "beam_sharpness": 0.5
  },
  "signal_generator": {
    "enabled": true,
    "x": {
      "waveform": "sine",
      "keyframes": [
        {"frequency": 3.0, "phase": 0.0, "amplitude": 0.5, "duration": 5.0},
        {"frequency": 1.0, "phase": 0.0, "amplitude": 0.8, "duration": 5.0}
      ]
    },
    "y": {
      "waveform": "sine",
      "keyframes": [
        {"frequency": 1.0, "phase": 0.0, "amplitude": 0.6, "duration": 5.0},
        {"frequency": 3.0, "phase": 0.0, "amplitude": 0.8, "duration": 5.0}
      ]
    }
  },
  "audio": {
    "sample_rate": 44100,
    "buffer_size": 2048,
    "amplitude_scale": 1.5
  },
  "playback": {
    "mode": "sequential",
    "auto_advance": true
  }
}
